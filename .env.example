# ================================
# SELDENRIJK AUTO WHATSAPP - ENVIRONMENT VARIABLES
# ================================
# IMPORTANT: Copy this file to .env and replace ALL placeholder values
# NEVER commit .env to git - only commit .env.example
# ================================

# --------------------------------
# ANTHROPIC CLAUDE API (ONLY AI PROVIDER)
# --------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-REPLACE_WITH_YOUR_ANTHROPIC_API_KEY

# --------------------------------
# SUPABASE (VECTOR DATABASE)
# --------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=REPLACE_WITH_YOUR_SUPABASE_SERVICE_ROLE_KEY

# --------------------------------
# CHATWOOT (CUSTOMER SUPPORT)
# --------------------------------
CHATWOOT_BASE_URL=https://app.chatwoot.com
CHATWOOT_API_TOKEN=REPLACE_WITH_YOUR_CHATWOOT_API_TOKEN
CHATWOOT_ACCOUNT_ID=1
CHATWOOT_INBOX_ID=1
CHATWOOT_SECRET_KEY_BASE=REPLACE_WITH_YOUR_CHATWOOT_SECRET_KEY

# --------------------------------
# TWILIO WHATSAPP (PRIMARY PROVIDER)
# --------------------------------
TWILIO_ACCOUNT_SID=REPLACE_WITH_YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=REPLACE_WITH_YOUR_TWILIO_AUTH_TOKEN
TWILIO_WHATSAPP_NUMBER=whatsapp:+31850000000
TWILIO_WEBHOOK_URL=https://your-railway-domain.up.railway.app/webhooks/twilio/whatsapp

# --------------------------------
# HUBSPOT CRM (OPTIONAL)
# --------------------------------
HUBSPOT_API_KEY=REPLACE_WITH_YOUR_HUBSPOT_API_KEY
HUBSPOT_ENABLED=false  # Set to 'true' to enable HubSpot sync

# --------------------------------
# GOOGLE CALENDAR (OPTIONAL)
# --------------------------------
GOOGLE_SERVICE_ACCOUNT_JSON=/path/to/service-account.json
GOOGLE_CALENDAR_ID=primary
GOOGLE_CALENDAR_ENABLED=false  # Set to 'true' to enable Calendar integration

# --------------------------------
# REDIS & CELERY
# --------------------------------
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# --------------------------------
# PLAYWRIGHT (SCRAPER)
# --------------------------------
PLAYWRIGHT_HEADLESS=true

# --------------------------------
# LOGGING
# --------------------------------
LOG_LEVEL=INFO
